<p id="notice"><%= notice %></p>

<h1>All Coaches</h1><br>
<% if user_signed_in? %>
<%= link_to 'Register New Coach', new_coach_path %><% end %>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Bio</th>
      <th>Location</th>
      <th>Session</th>
      <th>Cost</th>
      <th>Availability</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coaches.each do |coach| %>
      <tr>
        <td><%= coach.first_name %></td>
        <td><%= coach.last_name %></td>
        <td><%= coach.bio %></td>
        <td><%= coach.location %></td>
        <td><%= coach.session %></td>
        <td><%= coach.cost %></td>
        <td><%= coach.availability %></td>
        <%# <td><%= image_tag coach_image_url(coach) %>
        <td><%= link_to 'View', coach_path(coach) %></td>

        <td><% if user_signed_in? && coach.user_id == current_user.id %></td>
        <%# <td><%= link_to 'Show', coach %>
        <td><%= link_to 'Edit', edit_coach_path(coach) %></td>
        <td><%= link_to 'Destroy', coach, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      
    <% end %>
    </tr>
    <% end %>
  </tbody>
</table>




